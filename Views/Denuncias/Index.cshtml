@model IEnumerable<CrimeWatch.Models.Denuncia>

@{
    ViewData["Title"] = "Index";
}

<h1 class="center">Lista de denuncias</h1>

<p>
    <a asp-action="Create">Registrar denuncia</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localizacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataHora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autorizado)
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localizacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataHora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autorizado)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.DenunciaId"><img src="~/images/editar.png" alt="Editar" /></a> |
                    <a asp-action="Details" asp-route-id="@item.DenunciaId"><img src="~/images/mais.png" alt="Detalhes" /></a> 
            </td>
        </tr>
}
    </tbody>
</table>
